{% extends 'sideBar.html.twig' %}

{% block title %}admin Dashboard{% endblock %}

{% block content %}
    <div class="container mt-5">
        <h2 class="mb-4 text-center">admin Dashboard</h2>

        {% if messages|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                    <tr>
                        <th scope="col">User Email</th>
                        <th scope="col">Content</th>
                        <th scope="col">Created At</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for message in messages %}
                        <tr>
                            <td>{{ message.user.email }}</td>
                            <td>{{ message.content }}</td>
                            <td>{{ message.createdAt|date('Y-m-d H:i') }}</td>
                            <td class="text-center">
                                <div class="d-inline-flex gap-2">
                                    <!-- Bouton Delete -->
                                    <form action="{{ path('admindashboard_delete_message', {'id': message.id}) }}" method="post">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                                        <button type="submit" class="action-btn btn-delete" title="Delete Message" onclick="return confirm('Are you sure you want to delete this message?')">
                                            üóëÔ∏è
                                        </button>
                                    </form>

                                    <!-- Bouton Unreport -->
                                    {% if message.isSignaled %}
                                        <a href="{{ path('admin_unreport_message', {'id': message.id}) }}" class="action-btn btn-unreport" title="Unreport Message">
                                            üö®
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info text-center" role="alert">
                No messages found.
            </div>
        {% endif %}
    </div>

    <!-- Scroll to Top Button -->
    <button onclick="scrollToTop()" id="scrollToTopBtn" class="btn btn-primary rounded-circle">
        ‚¨ÜÔ∏è
    </button>

    <style>
        /* Styles des boutons Actions */
        .action-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px; /* Taille compacte */
            height: 40px; /* Taille compacte */
            font-size: 16px; /* Taille de l'ic√¥ne */
            color: #ffffff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            text-decoration: none;
        }

        .btn-delete {
            background-color: #e63946; /* Rouge vif */
        }

        .btn-delete:hover {
            background-color: #d62828; /* Rouge plus sombre au hover */
            box-shadow: 0px 3px 6px rgba(230, 57, 70, 0.3); /* Effet d'ombre */
        }

        .btn-unreport {
            background-color: #f4a261; /* Orange vif */
        }

        .btn-unreport:hover {
            background-color: #e76f51; /* Orange sombre */
            box-shadow: 0px 3px 6px rgba(244, 162, 97, 0.3); /* Effet d'ombre */
        }

        /* Styles Scroll to Top */
        #scrollToTopBtn {
            position: fixed;
            bottom: 20px;
            right: 20px;
            display: none;
            width: 50px;
            height: 50px;
            font-size: 22px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

        #scrollToTopBtn:hover {
            background-color: #0056b3;
            color: white;
        }
    </style>

    <script>
        // Code du bouton Scroll to Top
        const scrollTopBtn = document.getElementById("scrollToTopBtn");

        window.onscroll = function () {
            if (document.documentElement.scrollTop > 200) {
                scrollTopBtn.style.display = "flex";
            } else {
                scrollTopBtn.style.display = "none";
            }
        };

        function scrollToTop() {
            window.scrollTo({top: 0, behavior: 'smooth'});
        }
    </script>
{% endblock %}