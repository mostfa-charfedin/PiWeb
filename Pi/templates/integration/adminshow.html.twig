{# templates/integration/adminshow.html.twig #}
{% extends 'sideBar.html.twig' %}

{% block title %}Project Details{% endblock %}

{% block content %}
<main id="main" class="main">
  <div class="pagetitle d-flex justify-content-between align-items-center">
    <div>
      <h1>Project Details</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('') }}">Home</a></li>
          <li class="breadcrumb-item"><a href="{{ path('projet_list') }}">Projects</a></li>
          <li class="breadcrumb-item active">Details</li>
        </ol>
      </nav>
    </div>
    <a href="{{ path('projet_list') }}" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> Back to the list
    </a>
  </div><!-- End Page Title -->

  <section class="section">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">{{ projet.titre }}</h5>
            
            <div class="row mb-3">
              <div class="col-sm-3">Project Manager:</div>
              <div class="col-sm-9">{{ projet.iduser.nom }} {{ projet.iduser.prenom }}</div>
            </div>
            
            <div class="row">
              <div class="col-sm-12">
                <strong>Description:</strong>
                <p class="mt-2">{{ projet.description }}</p>
              </div>
            </div>
            
            <div class="d-flex justify-content-end mt-4">
              <a href="{{ path('projet_edit', {'idProjet': projet.idProjet}) }}" class="btn btn-warning me-2">
                <i class="bi bi-pencil-square"></i> Edit
              </a>
              <a href="{{ path('projet_delete', {'idProjet': projet.idProjet}) }}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this project?')">
                <i class="bi bi-trash"></i> Delete
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
{% endblock %}