{% extends 'sideBar.html.twig' %}

{% block title %}Ressource Details{% endblock %}

{% block content %}
<main id="main" class="main">
  <div class="pagetitle d-flex justify-content-between align-items-center">
    <div>
      <h1>{{ ressource.titre }}</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_ressources_index') }}">Ressources</a></li>
          <li class="breadcrumb-item active">Details</li>
        </ol>
      </nav>
    </div>
    <a href="{{ path('app_ressources_index') }}" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> Back
    </a>
  </div>

  <section class="section">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <!-- Enhanced Ressource Information Card with Shadow, Gradient, and Hover Effects -->
        <div class="card shadow-lg mb-4 rounded-3 hover-card">
          <div class="card-body">
            <h5 class="card-title mb-4"><i class="bi bi-file-earmark-text-fill"></i> Ressource Information</h5>

            <!-- ID Section -->
            <div class="row mb-3">
              <div class="col-md-4">
                <p><strong><i class="bi bi-card-list"></i> ID:</strong></p>
              </div>
              <div class="col-md-8">
                <p>{{ ressource.idresource }}</p>
              </div>
            </div>

            <!-- Type Section -->
            <div class="row mb-3">
              <div class="col-md-4">
                <p><strong><i class="bi bi-tags"></i> Type:</strong></p>
              </div>
              <div class="col-md-8">
                <p class="text-primary">{{ ressource.type }}</p>
              </div>
            </div>

            <!-- Description Section -->
            <div class="row mb-3">
              <div class="col-md-4">
                <p><strong><i class="bi bi-pencil-square"></i> Description:</strong></p>
              </div>
              <div class="col-md-8">
                <p>{{ ressource.description }}</p>
              </div>
            </div>

            <!-- Link Section -->
            <div class="row mb-3">
              <div class="col-md-4">
                <p><strong><i class="bi bi-link-45deg"></i> Lien:</strong></p>
              </div>
              <div class="col-md-8">
                {% if ressource.lien %}
                  <a href="{{ ressource.lien }}" target="_blank" class="text-decoration-none link-hover">{{ ressource.lien }}</a>
                {% else %}
                  <span class="text-muted">No link provided</span>
                {% endif %}
              </div>
            </div>

            <!-- Average Rating Section -->
            <div class="row mb-3">
              <div class="col-md-4">
                <p><strong><i class="bi bi-star-fill"></i> Average Rating:</strong></p>
              </div>
              <div class="col-md-8">
                <p>{{ ressource.noteaverage }} / 10</p>
              </div>
            </div>

          </div>
        </div>

        <!-- Floating Action Buttons for Edit and Delete -->
        <div class="d-flex justify-content-end gap-3 action-buttons">
          <a href="{{ path('app_ressources_edit', {'idresource': ressource.idresource}) }}" class="btn btn-warning btn-lg rounded-circle shadow-sm">
            <i class="bi bi-pencil"></i>
          </a>
          {{ include('ressources/_delete_form.html.twig') }}
        </div>
      </div>
    </div>
  </section>
</main>
{% endblock %}

{% block stylesheets %}
<style>
  /* General card styling */
  .card {
    border-radius: 10px;
    border: none;
    background: #f9f9f9;
    transition: transform 0.3s ease-in-out;
  }

  /* Hover effect for the card */
  .hover-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
  }

  /* Card title */
  .card-title {
    font-size: 1.6rem;
    font-weight: 600;
  }

  /* Action buttons (Floating) */
  .action-buttons {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 10;
  }

  /* Action button styling */
  .btn-warning {
    background: linear-gradient(45deg, #ffbc00, #ff9800);
    color: #fff;
    border-radius: 50%;
    padding: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .btn-warning:hover {
    background: linear-gradient(45deg, #ff9800, #e68900);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }

  /* Link hover effect */
  .link-hover {
    transition: color 0.3s ease;
  }

  .link-hover:hover {
    color: #0056b3;
  }

  /* Icon Styling */
  .bi {
    margin-right: 8px;
  }

  /* Text and Row Styling */
  .row p {
    margin: 0;
    font-size: 1rem;
    font-weight: 400;
  }

  .text-primary {
    font-weight: 500;
    color: #007bff;
  }

  /* Make the card and content responsive */
  @media (max-width: 767px) {
    .card-body {
      padding: 1rem;
    }

    .row {
      margin-bottom: 1rem;
    }

    .btn-warning {
      padding: 12px;
    }
  }
</style>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
