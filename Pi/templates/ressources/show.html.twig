{% extends 'sideBar.html.twig' %}
{% block title %}Ressource Details{% endblock %}

{% block content %}
<main id="main" class="main">
  <div class="pagetitle d-flex justify-content-between align-items-center">
    <div>
      <h1>{{ ressource.titre }}</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_ressources_index') }}">Ressources</a></li>
          <li class="breadcrumb-item active">Details</li>
        </ol>
      </nav>
    </div>
    <a href="{{ path('app_ressources_index') }}" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> Back
    </a>
  </div>

  <section class="section">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Ressource Information</h5>

            <p><strong>ID:</strong> {{ ressource.idresource }}</p>
            <p><strong>Type:</strong> {{ ressource.type }}</p>
            <p><strong>Description:</strong> {{ ressource.description }}</p>
            <p><strong>Lien:</strong> 
              {% if ressource.lien %}
                <a href="{{ ressource.lien }}" target="_blank">{{ ressource.lien }}</a>
              {% else %}
                <span class="text-muted">No link provided</span>
              {% endif %}
            </p>
          </div>
        </div>

        <div class="d-flex justify-content-end gap-2">
          <a href="{{ path('app_ressources_edit', {'idresource': ressource.idresource}) }}" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
          </a>
          {{ include('ressources/_delete_form.html.twig') }}
        </div>
      </div>
    </div>
  </section>
</main>
{% endblock %}
