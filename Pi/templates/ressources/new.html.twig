{% extends 'sideBar.html.twig' %}

{% block title %}Create New Ressources{% endblock %}

{% block content %}
<main id="main" class="main">
  <div class="pagetitle d-flex justify-content-between align-items-center">
    <div>
      <h1>Create New Ressources</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_ressources_index') }}">Ressources</a></li>
          <li class="breadcrumb-item active">Create New</li>
        </ol>
      </nav>
    </div>
    <a href="{{ path('app_ressources_index') }}" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> Back to List
    </a>
  </div>

  <section class="section">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8">
        <!-- Flash Messages -->
        {% for message in app.flashes('success') %}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-1"></i>
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
          <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-octagon me-1"></i>
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
        {% endfor %}

        <div class="card shadow-sm rounded">
          <div class="card-body">
            <h5 class="card-title mb-4">Fill in the Details</h5>

            {{ form_start(form, {'attr': {'class': 'form'}}) }}
              <div class="mb-3">
                {{ form_label(form.titre, 'Resource Title', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control' ~ (form_errors(form.titre) ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.titre) }}
              </div>
              
              <div class="mb-3">
                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select' ~ (form_errors(form.type) ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.type) }}
              </div>
              
              <div class="mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form_errors(form.description) ? ' is-invalid' : ''), 'rows': '4'}}) }}
                {{ form_errors(form.description) }}
              </div>

              <div class="mb-3">
                {{ form_label(form.lien, 'Link to the resource (optional)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.lien, {'attr': {'class': 'form-control' ~ (form_errors(form.lien) ? ' is-invalid' : '')}}) }}
                {{ form_errors(form.lien) }}
              </div>

              <div class="mb-3">
                {{ form_label(form.noteaverage, 'Average Rating (0-10, optional)', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.noteaverage, {'attr': {'class': 'form-control' ~ (form_errors(form.noteaverage) ? ' is-invalid' : ''), 'step': '0.1', 'min': '0', 'max': '10', 'required': false}}) }}
                {{ form_errors(form.noteaverage) }}
                <div class="form-text text-muted">Leave empty if you don't want to set a rating yet.</div>
              </div>

              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-circle"></i> Save Ressource
                </button>
              </div>
            {{ form_end(form) }}
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

{% block stylesheets %}
<style>
  .form-control, .form-select {
    transition: all 0.3s ease;
  }

  .form-control:focus, .form-select:focus {
    border-color: #0056b3;
    box-shadow: 0 0 5px rgba(0, 86, 179, 0.5);
  }

  /* Validation Error Styling */
  .is-invalid {
    border-color: #dc3545;
  }

  .is-invalid:focus {
    border-color: #dc3545;
    box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.25);
  }

  .invalid-feedback {
    color: #dc3545;
    font-size: 0.875em;
    margin-top: 0.25rem;
  }

  /* Alert Styling */
  .alert {
    border-radius: 10px;
    margin-bottom: 1rem;
  }

  .alert-success {
    background-color: #d4edda;
    border-color: #c3e6cb;
    color: #155724;
  }

  .alert-danger {
    background-color: #f8d7da;
    border-color: #f5c6cb;
    color: #721c24;
  }

  /* Card Styling */
  .card {
    border-radius: 10px;
  }

  .btn-primary:hover {
    background-color: #004085;
    transition: background-color 0.3s ease;
  }

  .btn-secondary {
    transition: background-color 0.3s ease;
  }

  .btn-secondary:hover {
    background-color: #d6d8db;
  }
</style>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% endblock %}
