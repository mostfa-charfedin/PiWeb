{% extends 'sideBar.html.twig' %}

{% block title %}Create New Ressources{% endblock %}

{% block content %}
<main id="main" class="main">
  <div class="pagetitle d-flex justify-content-between align-items-center">
    <div>
      <h1>Create New Ressources</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_ressources_index') }}">Ressources</a></li>
          <li class="breadcrumb-item active">Create New</li>
        </ol>
      </nav>
    </div>
    <a href="{{ path('app_ressources_index') }}" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> Back to List
    </a>
  </div>

  <section class="section">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8">
        <div class="card shadow-sm rounded">
          <div class="card-body">
            <h5 class="card-title mb-4">Fill in the Details</h5>

            <!-- Ressources Form -->
            <form method="POST" action="{{ path('app_ressources_new') }}" enctype="multipart/form-data" class="form">
              <div class="mb-3">
                <label for="titre" class="form-label">Resource Title</label>
                <input type="text" id="titre" name="titre" class="form-control" placeholder="Resource Title" required>
              </div>
              
              <!-- Type (read-only) -->
              <div class="mb-3">
                <label for="type" class="form-label">Type</label>
                <input type="text" id="type" name="type" class="form-control" value="Document" readonly>
              </div>
              
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea id="description" name="description" class="form-control" placeholder="Write a short description" rows="4"></textarea>
              </div>

              <div class="mb-3">
                <label for="lien" class="form-label">Link to the resource (optional)</label>
                <input type="url" id="lien" name="lien" class="form-control" placeholder="Link to the resource">
              </div>

              <div class="mb-3">
                <label for="noteaverage" class="form-label">Average Rating (0-10)</label>
                <input type="number" id="noteaverage" name="noteaverage" class="form-control" placeholder="Average Rating (0-10)" step="0.1" min="0" max="10">
              </div>

              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                  <i class="bi bi-check-circle"></i> Save Ressource
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

{% block stylesheets %}
<style>
  .form-control, .form-select {
    transition: all 0.3s ease;
  }

  .form-control:focus, .form-select:focus {
    border-color: #0056b3;
    box-shadow: 0 0 5px rgba(0, 86, 179, 0.5);
  }

  /* Card Styling */
  .card {
    border-radius: 10px;
  }

  .btn-primary:hover {
    background-color: #004085;
    transition: background-color 0.3s ease;
  }

  .btn-secondary {
    transition: background-color 0.3s ease;
  }

  .btn-secondary:hover {
    background-color: #d6d8db;
  }

  /* Form Input Animations */
  .form-control, .form-select {
    transition: border 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus, .form-select:focus {
    border-color: #0056b3;
    box-shadow: 0 0 10px rgba(0, 86, 179, 0.5);
  }
</style>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% endblock %}
