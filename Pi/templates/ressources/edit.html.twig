{% extends 'sideBar.html.twig' %}

{% block title %}Edit Ressources{% endblock %}

{% block content %}
<main id="main" class="main">
  <div class="pagetitle d-flex justify-content-between align-items-center">
    <div>
      <h1>Edit Ressources</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="{{ path('app_ressources_index') }}">Ressources</a></li>
          <li class="breadcrumb-item active">Edit</li>
        </ol>
      </nav>
    </div>
    <a href="{{ path('app_ressources_index') }}" class="btn btn-secondary">
      <i class="bi bi-arrow-left"></i> Back to List
    </a>
  </div>

  <section class="section">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8">
        <!-- Edit Ressource Form Card -->
        <div class="card shadow-lg mb-4 rounded-3 hover-card">
          <div class="card-body">
            <h5 class="card-title mb-4"><i class="bi bi-pencil-square"></i> Edit Ressource</h5>

            <!-- Form Start -->
            {{ form_start(form) }}
              <!-- Titre Field -->
              <div class="mb-3">
                {{ form_row(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Resource Title'}}) }}
              </div>

              <!-- Type Field (dropdown) -->
              <div class="mb-3">
                {{ form_row(form.type, {'attr': {'class': 'form-select', 'style': 'font-weight: 600;'}}) }}
              </div>

              <!-- Description Field -->
              <div class="mb-3">
                {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Write a short description'}}) }}
              </div>

              <!-- Link Field -->
              <div class="mb-3">
                {{ form_row(form.lien, {'attr': {'class': 'form-control', 'placeholder': 'Link to the resource (optional)'}}) }}
              </div>

              <!-- Noteaverage Field -->
              <div class="mb-3">
                {{ form_row(form.noteaverage, {'attr': {'class': 'form-control', 'placeholder': 'Average Rating (0-10)'}}) }}
              </div>

              <!-- Submit Button -->
              <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success btn-lg rounded-3 shadow-sm btn-hover">
                  <i class="bi bi-check-circle"></i> Update Ressource
                </button>
              </div>
            {{ form_end(form) }}

          </div>
        </div>

        <!-- Floating Delete Button -->
        <div class="d-flex justify-content-end gap-3 action-buttons">
          {{ include('ressources/_delete_form.html.twig') }}
        </div>
      </div>
    </div>
  </section>
</main>
{% endblock %}

{% block stylesheets %}
<style>
  /* Card Styling */
  .card {
    border-radius: 10px;
    border: none;
    background: #f9f9f9;
    transition: transform 0.3s ease-in-out;
  }

  /* Hover effect for the card */
  .hover-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease-in-out;
  }

  /* Action buttons (floating) */
  .action-buttons {
    position: fixed;
    bottom: 30px;
    right: 30px;
    z-index: 10;
  }

  /* Update button */
  .btn-success {
    background: linear-gradient(45deg, #28a745, #218838);
    color: #fff;
    border-radius: 50px;
    padding: 15px 30px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .btn-success:hover {
    background: linear-gradient(45deg, #218838, #1e7e34);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }

  /* Delete button style (floating) */
  .btn-danger {
    background: linear-gradient(45deg, #dc3545, #c82333);
    color: #fff;
    border-radius: 50px;
    padding: 15px 30px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .btn-danger:hover {
    background: linear-gradient(45deg, #c82333, #bd2130);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
  }

  /* Floating button adjustments */
  .btn-sm {
    padding: 10px 20px;
    border-radius: 25px;
  }

  /* Form Styling */
  .form-control, .form-select {
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .form-control:focus, .form-select:focus {
    border-color: #0056b3;
    box-shadow: 0 0 5px rgba(0, 86, 179, 0.5);
  }

  /* Hover Effect for Buttons */
  .btn-hover:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 10px rgba(0, 86, 179, 0.3);
  }

  /* Text Styling */
  .text-primary {
    font-weight: 500;
  }

  .text-muted {
    font-style: italic;
  }

  /* Responsive Design */
  @media (max-width: 767px) {
    .card-body {
      padding: 1rem;
    }

    .row {
      margin-bottom: 1rem;
    }
  }
</style>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
