{% extends 'base.html.twig' %}

{% block title %}Wellness Programs{% endblock %}

{% block body %}
  <main>
    <div class="container">
      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-8 col-md-6 d-flex flex-column align-items-center justify-content-center">

                           <div class="text-center mb-3">
                    <a href="{{ path('app_programmebienetre_index') }}" class="d-inline-block">
                        <img src="{{ asset('assets/imgP/logo.jpg') }}" alt="Onboardify Logo" 
                             style="height: 60px; width: auto; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                </a>
                 <h2 class="mt-2 mb-0" style="color: #2c3345; font-size: 1.5rem; font-weight: 700;">
                        Onboardify
                    </h2>
              </div>

              <div class="card mb-3">
                <div class="card-body">
                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Wellness Programs</h5>
                    <p class="text-center small">List of all wellness programs</p>
                  </div>

                  {% if programmebienetre is empty %}
                    <p class="text-center">No programs found</p>
                  {% else %}
                    <div class="table-responsive">
                      <table class="table table-hover">
                        <thead>
                          <tr>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>User</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                        {% for program in programmebienetre %}
                          <tr>
                            <td>{{ program.titre }}</td>
                            <td>{{ program.type }}</td>
                            <td>{{ program.description }}</td>
                            <td>{{ program.iduser ? program.iduser.nom : '' }}</td>
                            <td>
                              <div class="btn-group" role="group">
                                <a href="{{ path('app_programmebienetre_show', {'idprogramme': program.idprogramme}) }}" class="btn btn-info btn-sm">
                                  <i class="bi bi-eye-fill"></i> View
                                </a>
                                <a href="{{ path('app_programmebienetre_edit', {'idprogramme': program.idprogramme}) }}" class="btn btn-warning btn-sm">
                                  <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                              </div>
                            </td>
                          </tr>
                        {% endfor %}
                        </tbody>
                      </table>
                    </div>
                  {% endif %}

                  <div class="text-center mt-4">
                    <a href="{{ path('app_programmebienetre_new') }}" class="btn btn-primary w-100">
                      <i class="bi bi-plus-circle-fill"></i> Create New Program
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>
  </main>
{% endblock %}
