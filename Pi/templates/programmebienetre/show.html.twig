{% extends 'base.html.twig' %}

{% block title %}Program Details{% endblock %}

{% block body %}
<div class="bg-gradient" style="
    background: linear-gradient(120deg, #84fab0 0%, #8fd3f4 100%);
    min-height: 100vh;
    padding: 2rem 0;
">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">
                <!-- Logo Section -->
                <div class="d-flex justify-content-center py-4">
                    <div class="text-center">
                        <img src="{{ asset('assets/imgP/logo.png') }}" alt="Onboardify Logo" style="height: 80px; width: auto; margin-bottom: 15px;">
                        <h2 class="h3 mb-3" style="color: #012970; font-weight: 600;">Onboardify</h2>
                    </div>
                </div>

                <!-- Main Card -->
                <div class="card" style="border-radius: 15px; border: none; box-shadow: 0 12px 24px rgba(0,0,0,0.1); backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.9);">
                    <div class="card-header text-white" style="border-radius: 15px 15px 0 0; background: linear-gradient(120deg, #4776E6 0%, #8E54E9 100%); border: none;">
                        <h4 class="card-title mb-0 py-2 text-center" style="font-size: 1.2rem; letter-spacing: 0.5px;">
                            <i class="bi bi-eye me-2"></i>Program Details
                        </h4>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="mb-4">
                            <label class="form-label" style="color: #4a5568; font-weight: 500;">
                                <i class="bi bi-bookmark-star me-1" style="color: #8E54E9;"></i>Title
                            </label>
                            <div class="form-control" style="border-radius: 12px; border: 1px solid #e2e8f0; background-color: #f8fafc; padding: 12px;">
                                {{ programmebienetre.titre }}
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" style="color: #4a5568; font-weight: 500;">
                                <i class="bi bi-tag me-1" style="color: #8E54E9;"></i>Type
                            </label>
                            <div class="form-control" style="border-radius: 12px; border: 1px solid #e2e8f0; background-color: #f8fafc; padding: 12px;">
                                {{ programmebienetre.type }}
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" style="color: #4a5568; font-weight: 500;">
                                <i class="bi bi-text-paragraph me-1" style="color: #8E54E9;"></i>Description
                            </label>
                            <div class="form-control" style="border-radius: 12px; border: 1px solid #e2e8f0; background-color: #f8fafc; min-height: 100px; padding: 12px;">
                                {{ programmebienetre.description }}
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label" style="color: #4a5568; font-weight: 500;">
                                <i class="bi bi-person-check me-1" style="color: #8E54E9;"></i>Assigned User
                            </label>
                            <div class="form-control" style="border-radius: 12px; border: 1px solid #e2e8f0; background-color: #f8fafc; padding: 12px;">
                                {{ programmebienetre.iduser ? programmebienetre.iduser.prenom ~ ' ' ~ programmebienetre.iduser.nom : 'No user assigned' }}
                            </div>
                        </div>

                        <div class="d-grid gap-3">
                            <a href="{{ path('app_programmebienetre_edit', {'idprogramme': programmebienetre.idprogramme}) }}" 
                               class="btn btn-primary"
                               style="border-radius: 12px; padding: 12px; background: linear-gradient(120deg, #4776E6 0%, #8E54E9 100%); border: none; box-shadow: 0 4px 15px rgba(71,118,230,0.2); font-weight: 500; letter-spacing: 0.5px;">
                                <i class="bi bi-pencil-square me-2"></i>Edit Program
                            </a>
                            
                            <form method="post" action="{{ path('app_programmebienetre_delete', {'idprogramme': programmebienetre.idprogramme}) }}" onsubmit="return confirm('Are you sure you want to delete this program?');" class="d-grid">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ programmebienetre.idprogramme) }}">
                                <button class="btn btn-danger" style="border-radius: 12px; padding: 12px; background: linear-gradient(120deg, #FF416C 0%, #FF4B2B 100%); border: none; box-shadow: 0 4px 15px rgba(255,65,108,0.2); font-weight: 500; letter-spacing: 0.5px;">
                                    <i class="bi bi-trash me-2"></i>Delete Program
                                </button>
                            </form>

                            <a href="{{ path('app_programmebienetre_index') }}" 
                               class="btn btn-light"
                               style="border-radius: 12px; padding: 12px; background: white; border: 1px solid #e2e8f0; font-weight: 500; letter-spacing: 0.5px;">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Footer Note -->
                <div class="text-center mt-3">
                    <p class="text-muted small mb-0" style="color: #4a5568 !important;">
                        <i class="bi bi-info-circle me-1"></i>
                        View mode - Changes can be made in edit mode
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
