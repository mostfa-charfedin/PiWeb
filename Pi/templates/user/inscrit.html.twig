<body>
  <main>
    <div class="container">
      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">
              
              <div class="d-flex justify-content-center py-4">
                <a href="" class="logo d-flex align-items-center w-auto">
                  <img src="{{ asset('assets/imgP/logo.png') }}" alt="">
                  <span class="d-none d-lg-block">Onboardify</span>
                </a>
              </div>

              <div class="card mb-3">
                <div class="card-body">
                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Create an account</h5>
                    <p class="text-center small">Fill in the fields to register</p>
                  </div>
{% if formB.vars.errors|length > 0 %}
    <ul>
        {% for error in formB.vars.errors %}
            <li>{{ error.message }}</li>
        {% endfor %}
    </ul>
{% endif %}

{{ form_start(formB, {
    'method': 'POST', 
    'action': path('inscrit'), 
    'attr': {'class': 'row g-3 needs-validation', 'novalidate': 'novalidate',
    'enctype': 'multipart/form-data'}
}) }}

<!-- Nom & PrÃ©nom -->
<div class="col-md-6">
    <label for="nom" class="form-label">First name</label>
    {{ form_widget(formB.nom, {'attr': {'class': 'form-control'}}) }}
</div>

<div class="col-md-6">
    <label for="prenom" class="form-label">Last name</label>
    {{ form_widget(formB.prenom, {'attr': {'class': 'form-control'}}) }}
</div>

<!-- Email -->
<div class="col-md-6">
    <label for="email" class="form-label">Email</label>
    {{ form_widget(formB.email, {'attr': {'class': 'form-control'}}) }}
</div>

<!-- Mot de passe -->
<div class="col-md-6">
    <label for="password" class="form-label">Password</label>
    {{ form_widget(formB.password, {'attr': {'class': 'form-control'}}) }}
</div>

<!-- CIN -->
<div class="col-md-6">
    <label for="cin" class="form-label">CIN</label>
    {{ form_widget(formB.cin, {'attr': {'class': 'form-control'}}) }}
</div>

<!-- Statut -->
<div class="col-md-6">
    <label for="status" class="form-label">Phone number</label>
    {{ form_widget(formB.numPhone, {'attr': {'class': 'form-control'}}) }}
</div>

<!-- Date de naissance -->
<div class="col-mt-3">
    <label for="date_naissance" class="form-label">Birthday</label>
    {{ form_widget(formB.datenaissance, {'attr': {'class': 'form-control'}}) }}
</div>

<!-- Bouton en bas -->
<div class="col-12 mt-3">
    <button class="btn btn-primary w-100" type="submit">Create account</button>
</div>

<!-- Lien vers le login -->
<div class="col-12 text-center mt-2">
    <p class="small mb-0">Already have an account? <a href="{{ path('login') }}">Login</a></p>
</div>

{{ form_end(formB) }}




