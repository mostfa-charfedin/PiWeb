<form method="post" action="{{ path('app_avis_delete', {'id': avis.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet avis ?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ avis.id) }}">
    <button class="btn btn-danger btn-sm">
        <i class="bi bi-trash me-1"></i>
        Supprimer
    </button>
</form>
