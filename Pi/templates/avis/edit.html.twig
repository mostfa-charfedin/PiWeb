{% extends 'sidebar.html.twig' %}

{% block title %}Modifier l'Avis{% endblock %}

{% block content %}
<main id="main" class="main">
    <div class="pagetitle">
        <h1>Modifier l'Avis</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('user_programmes') }}">Accueil</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_avis_index') }}">Avis</a></li>
                <li class="breadcrumb-item active">Modifier</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Modifier votre avis</h5>

                        <div class="pt-4">
                            {{ include('avis/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                            <div class="mt-3">
                                <a href="{{ path('app_avis_index') }}" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left me-1"></i>
                                    Retour à la liste
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animation d'entrée du formulaire
            const card = document.querySelector('.card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                card.style.transition = 'all 0.3s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
{% endblock %}
