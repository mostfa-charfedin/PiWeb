{% extends 'base.html.twig' %}

{% block title %}Create Quiz{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="pagetitle text-center mb-4">
                <h1 class="display-5 fw-bold">Create Quiz</h1>
                <nav>
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="{{ path('quiz_list') }}">Home</a></li>
                        <li class="breadcrumb-item active">Create Quiz</li>
                    </ol>
                </nav>
            </div>

            <section class="section">
                <div class="row justify-content-center">
                    <div class="col-12 col-md-10 col-lg-8">
                        <div class="card shadow">
                            <div class="card-body">
                                <h5 class="card-title text-center mb-4">New Quiz</h5>

                                {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                                <div class="mb-3">
                                    {{ form_label(form.name, 'Quiz Name', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>

                                <div class="mb-4">
                                    {{ form_label(form.dateCreation, 'Creation Date', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dateCreation, {
                                        'attr': {
                                            'class': 'form-control',
                                            'min': "now"|date('Y-m-d')
                                        }
                                    }) }}
                                    {{ form_errors(form.dateCreation) }}
                                </div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="bi bi-plus-circle me-2"></i> Create Quiz
                                    </button>
                                    <a href="{{ path('quiz_list') }}" class="btn btn-secondary">
                                        <i class="bi bi-x-circle me-2"></i> Cancel
                                    </a>
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %}