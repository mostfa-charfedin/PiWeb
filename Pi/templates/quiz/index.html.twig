{% extends 'base.html.twig' %}

{% block title %}Quizzes{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="pagetitle text-center mb-4">
                <h1 class="display-5 fw-bold">Quizzes</h1>
                <nav>
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="{{ path('quiz_list') }}">Home</a></li>
                        <li class="breadcrumb-item active">Quizzes</li>
                    </ol>
                </nav>
            </div>

            <section class="section">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="card-title mb-0">Quiz List</h5>
                                    <a href="{{ path('quiz_create') }}" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-2"></i>Create New Quiz
                                    </a>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-hover datatable">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Creation Date</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for quiz in quizzes %}
                                            <tr>
                                                <td>{{ quiz.name }}</td>
                                                <td>{{ quiz.dateCreation|date('Y-m-d H:i:s') }}</td>
                                                <td class="text-center">
                                                    <div class="btn-group" role="group">
                                                        <a href="{{ path('quiz_view', {'id': quiz.idQuiz}) }}" 
                                                           class="btn btn-info btn-sm">
                                                            <i class="bi bi-eye me-1"></i>View
                                                        </a>
                                                        <a href="{{ path('quiz_edit', {'id': quiz.idQuiz}) }}" 
                                                           class="btn btn-warning btn-sm">
                                                            <i class="bi bi-pencil me-1"></i>Edit
                                                        </a>
                                                        <a href="{{ path('quiz_delete', {'id': quiz.idQuiz}) }}" 
                                                           class="btn btn-danger btn-sm" 
                                                           onclick="return confirm('Are you sure you want to delete this quiz?')">
                                                            <i class="bi bi-trash me-1"></i>Delete
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            {% else %}
                                            <tr>
                                                <td colspan="3" class="text-center">No quizzes found.</td>
                                            </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %} 