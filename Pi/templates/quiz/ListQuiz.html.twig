{% extends 'base.html.twig' %}

{% block title %}Quizzes{% endblock %}

{% block body %}
  <main id="main" class="main">
    <div class="pagetitle">
        <h1>Quizzes</h1>
      <nav>
        <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                <li class="breadcrumb-item active">Quizzes</li>
        </ol>
      </nav>
    </div>

    <section class="section">
      <div class="row">
            <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
                        <h5 class="card-title">Quiz List</h5>
                        <a href="{{ path('quiz_create') }}" class="btn btn-primary mb-3">
                            <i class="bi bi-plus-circle"></i> Create New Quiz
                        </a>

                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for quiz in quizzes %}
                                <tr>
                                    <td>{{ quiz.name }}</td>
                                    <td>{{ quiz.description }}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('quiz_edit', {'id': quiz.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a href="{{ path('quiz_delete', {'id': quiz.id}) }}" 
                                               class="btn btn-danger btn-sm" 
                                               onclick="return confirm('Are you sure you want to delete this quiz?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                  </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                  </div>
                </div>
        </div>
      </div>
    </section>
</main>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize datatable if available
        if (typeof $.fn.DataTable !== 'undefined') {
            $('.datatable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print"]
            });
        }
    });
</script>
{% endblock %} 