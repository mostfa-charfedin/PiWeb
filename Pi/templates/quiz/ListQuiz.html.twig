{% extends 'base.html.twig' %}

{% block title %}Quizzes{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
  <main id="main" class="main">
                <div class="pagetitle text-center mb-4">
                    <h1 class="display-5 fw-bold">Quizzes</h1>
      <nav>
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="{{ path('quiz_list') }}">Home</a></li>
                            <li class="breadcrumb-item active">Quizzes</li>
        </ol>
      </nav>
                </div>

                <section class="section">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <div class="card shadow">
            <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <h5 class="card-title mb-0">Quiz List</h5>
                                        <a href="{{ path('quiz_create') }}" class="btn btn-primary">
                                            <i class="bi bi-plus-circle me-2"></i>Create New Quiz
                                        </a>
                </div>

                                    <div class="table-responsive">
                                        <table class="table table-hover datatable">
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Creation Date</th>
                                                    <th class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for quiz in quizzes %}
                                                <tr>
                                                    <td>{{ quiz.getName() }}</td>
                                                    <td>{{ quiz.getDateCreation()|date('Y-m-d H:i:s') }}</td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <a href="{{ path('quiz_edit', {'id': quiz.getId()}) }}" 
                                                               class="btn btn-warning btn-sm">
                                                                <i class="bi bi-pencil me-1"></i>Edit
                                                            </a>
                                                            <a href="{{ path('quiz_delete', {'id': quiz.getId()}) }}" 
                                                               class="btn btn-danger btn-sm" 
                                                               onclick="return confirm('Are you sure you want to delete this quiz?')">
                                                                <i class="bi bi-trash me-1"></i>Delete
                                                            </a>
                    </div>
                                                    </td>
                                                </tr>
                                                {% else %}
                                                <tr>
                                                    <td colspan="3" class="text-center">No quizzes found.</td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                    </div>
                  </div>
                </div>
                    </div>
                    </div>
                </section>
            </main>
        </div>
    </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof $.fn.DataTable !== 'undefined') {
            $('.datatable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print"],
                "pageLength": 10,
                "dom": "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                       "<'row'<'col-sm-12'tr>>" +
                       "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
                "language": {
                    "search": "Search:",
                    "zeroRecords": "No matching records found",
                    "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                    "infoEmpty": "Showing 0 to 0 of 0 entries",
                }
            });
        }
    });
</script>

<style>
    .main {
        padding: 2rem 0;
    }
    .card {
        border: none;
        border-radius: 1rem;
    }
    .table th {
        background-color: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }
    .btn-group .btn {
        margin: 0 0.2rem;
    }
    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        background: #0d6efd !important;
        color: white !important;
        border: 1px solid #0d6efd !important;
    }
    .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
        background: #0b5ed7 !important;
        color: white !important;
        border: 1px solid #0b5ed7 !important;
    }
</style>
{% endblock %}