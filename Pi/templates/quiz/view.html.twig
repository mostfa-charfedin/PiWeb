{% extends 'base.html.twig' %}

{% block title %}Quiz: {{ quiz.name }}{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-xl-10">
            <div class="pagetitle text-center mb-4">
                <h1 class="display-5 fw-bold">Quiz: {{ quiz.name }}</h1>
                <nav>
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a href="{{ path('quiz_list') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ path('quiz_list') }}">Quizzes</a></li>
                        <li class="breadcrumb-item active">View Quiz</li>
                    </ol>
                </nav>
            </div>

            <section class="section">
                <div class="row justify-content-center">
                    <div class="col-12">
                        <div class="card shadow">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="card-title mb-0">Quiz Details</h5>
                                    <div>
                                        <a href="{{ path('quiz_edit', {'id': quiz.idQuiz}) }}" class="btn btn-warning me-2">
                                            <i class="bi bi-pencil me-2"></i>Edit Quiz
                                        </a>
                                        <a href="{{ path('quiz_delete', {'id': quiz.idQuiz}) }}" 
                                           class="btn btn-danger" 
                                           onclick="return confirm('Are you sure you want to delete this quiz? This will also delete all questions and responses.')">
                                            <i class="bi bi-trash me-2"></i>Delete Quiz
                                        </a>
                                    </div>
                                </div>

                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <p><strong>Creation Date:</strong> {{ quiz.dateCreation|date('Y-m-d H:i:s') }}</p>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h5 class="card-title mb-0">Questions</h5>
                                    <a href="{{ path('question_create', {'quizId': quiz.idQuiz}) }}" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-2"></i>Add Question
                                    </a>
                                </div>

                                {% if quiz.questions is defined and quiz.questions|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-hover datatable">
                                            <thead>
                                                <tr>
                                                    <th>Question</th>
                                                    <th>Responses</th>
                                                    <th class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for question in quiz.questions %}
                                                <tr>
                                                    <td>{{ question.text }}</td>
                                                    <td>
                                                        {% if question.responses is defined and question.responses|length > 0 %}
                                                            <ul class="list-unstyled">
                                                                {% for response in question.responses %}
                                                                    <li>
                                                                        {{ response.text }}
                                                                        {% if response.isCorrect %}
                                                                            <span class="badge bg-success ms-2">Correct</span>
                                                                        {% endif %}
                                                                        <div class="btn-group ms-2" role="group">
                                                                            <a href="{{ path('response_edit', {'id': response.id}) }}" 
                                                                               class="btn btn-warning btn-sm">
                                                                                <i class="bi bi-pencil me-1"></i>Edit
                                                                            </a>
                                                                            <a href="{{ path('response_delete', {'id': response.id}) }}" 
                                                                               class="btn btn-danger btn-sm" 
                                                                               onclick="return confirm('Are you sure you want to delete this response?')">
                                                                                <i class="bi bi-trash me-1"></i>Delete
                                                                            </a>
                                                                        </div>
                                                                    </li>
                                                                {% endfor %}
                                                            </ul>
                                                            <a href="{{ path('response_create', {'questionId': question.id}) }}" class="btn btn-sm btn-outline-primary mt-2">
                                                                <i class="bi bi-plus-circle me-1"></i>Add Response
                                                            </a>
                                                        {% else %}
                                                            <span class="text-muted">No responses</span>
                                                            <a href="{{ path('response_create', {'questionId': question.id}) }}" class="btn btn-sm btn-outline-primary ms-2">
                                                                <i class="bi bi-plus-circle me-1"></i>Add Response
                                                            </a>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="btn-group" role="group">
                                                            <a href="{{ path('question_edit', {'id': question.id}) }}" 
                                                               class="btn btn-warning btn-sm">
                                                                <i class="bi bi-pencil me-1"></i>Edit
                                                            </a>
                                                            <a href="{{ path('question_delete', {'id': question.id}) }}" 
                                                               class="btn btn-danger btn-sm" 
                                                               onclick="return confirm('Are you sure you want to delete this question?')">
                                                                <i class="bi bi-trash me-1"></i>Delete
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% else %}
                                    <div class="alert alert-info">
                                        <i class="bi bi-info-circle me-2"></i>No questions found for this quiz. Click "Add Question" to create one.
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>
{% endblock %} 