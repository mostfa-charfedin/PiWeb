{% extends 'navBar.html.twig' %}

{% block title %}Edit Complaint{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .complaint-edit-container {
            background-color: rgba(249, 249, 249, 0.9);
            border-radius: 12px;
            padding: 30px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
            max-width: 800px;
            margin: 30px auto;
        }
        .form-title {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 25px;
        }
        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #ddd;
        }
        textarea.form-control {
            min-height: 150px;
        }
        .btn-submit {
            width: 100%;
            padding: 12px;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
        }
        .status-section {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .status-badge {
            font-size: 1rem;
            padding: 8px 12px;
        }
        .action-buttons {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }
        .char-counter {
            font-size: 0.8rem;
            color: #6c757d;
            text-align: right;
            margin-top: 5px;
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container">
        <div class="complaint-edit-container">
            <h1 class="form-title">Edit Complaint #{{ complaint.id }}</h1>

            {{ form_start(form) }}

            <div class="form-group">
                {{ form_label(form.subject) }}
                {{ form_widget(form.subject, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Enter complaint subject...',
                        'maxlength': 150
                    }
                }) }}
                <div class="char-counter">
                    <span id="subject-counter">{{ complaint.subject|length }}</span>/150 characters
                </div>
                {{ form_errors(form.subject) }}
            </div>

            <div class="form-group">
                {{ form_label(form.content) }}
                {{ form_widget(form.content, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Describe your complaint in detail...',
                        'maxlength': 2000
                    }
                }) }}
                <div class="char-counter">
                    <span id="content-counter">{{ complaint.content|length }}</span>/2000 characters
                </div>
                {{ form_errors(form.content) }}
            </div>

            {% if is_granted('ROLE_ADMIN') and form.status is defined %}
                <div class="status-section">
                    <h5>Admin Management</h5>

                    <div class="form-group">
                        {{ form_label(form.status) }}
                        <div class="d-flex align-items-center">
                            {{ form_widget(form.status, {
                                'attr': {'class': 'form-select'}
                            }) }}
                            <span class="badge status-badge bg-{{ complaint.status is null ? 'warning' : (complaint.status ? 'success' : 'danger') }} ms-3">
                                    Current: {{ complaint.status is null ? 'Pending' : (complaint.status ? 'Resolved' : 'Rejected') }}
                                </span>
                        </div>
                        {{ form_errors(form.status) }}
                    </div>

                    {% if form.response is defined %}
                        <div class="form-group">
                            {{ form_label(form.response) }}
                            {{ form_widget(form.response, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Enter your response...',
                                    'rows': 5
                                }
                            }) }}
                            {{ form_errors(form.response) }}
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            <div class="action-buttons">
                <button type="submit" class="btn-submit">
                    <i class="fas fa-save"></i> Update Complaint
                </button>

                <a href="{{ path('app_complaint_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>

            {{ form_end(form) }}


                <div class="mt-4">
                    {{ include('complaint/_delete_form.html.twig') }}
                </div>

        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Character counters
            const subjectInput = document.getElementById('{{ form.subject.vars.id }}');
            const subjectCounter = document.getElementById('subject-counter');

            if (subjectInput && subjectCounter) {
                subjectInput.addEventListener('input', function() {
                    subjectCounter.textContent = this.value.length;
                });
            }

            const contentInput = document.getElementById('{{ form.content.vars.id }}');
            const contentCounter = document.getElementById('content-counter');

            if (contentInput && contentCounter) {
                contentInput.addEventListener('input', function() {
                    contentCounter.textContent = this.value.length;
                });
            }

            // Status change effect - only if status field exists
            const statusSelect = document.getElementById('{{ form.status.vars.id|default('') }}');
            if (statusSelect) {
                statusSelect.addEventListener('change', function() {
                    const badge = document.querySelector('.status-badge');
                    if (!badge) return;

                    if (this.value === '') {
                        badge.className = 'badge status-badge bg-warning ms-3';
                        badge.textContent = 'Will be: Pending';
                    } else if (this.value === '1') {
                        badge.className = 'badge status-badge bg-success ms-3';
                        badge.textContent = 'Will be: Resolved';
                    } else {
                        badge.className = 'badge status-badge bg-danger ms-3';
                        badge.textContent = 'Will be: Rejected';
                    }
                });
            }
        });
    </script>
{% endblock %}