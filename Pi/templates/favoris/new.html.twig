{% extends 'navBar.html.twig' %}

{% block title %}Add a Favorite{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-bookmark-plus"></i> Add a Favorite
                    </h2>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.idresource, 'Resource', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.idresource, {'attr': {'class': 'form-select'}}) }}
                            <div class="invalid-feedback">
                                Please select a resource
                            </div>
                        </div>

                        {{ form_widget(form.note) }}

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_favoris_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to list
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
