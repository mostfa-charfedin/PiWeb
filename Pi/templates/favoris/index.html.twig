{% extends 'navBar.html.twig' %}

{% block title %}My Favorites{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">My Favorites</h2>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Resource Title</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if favoris is defined and favoris|length > 0 %}
                                    {% for favori in favoris %}
                                        <tr>
                                            <td>{{ favori.titreRessource }}</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_favoris_show', {'idfavoris': favori.idfavoris}) }}" class="btn btn-sm btn-info" title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <form method="post" action="{{ path('app_favoris_delete', {'idfavoris': favori.idfavoris}) }}" onsubmit="return confirm('Are you sure you want to delete this favorite?');" class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ favori.idfavoris) }}">
                                                        <button type="submit" class="btn btn-sm btn-danger" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td colspan="2" class="text-center">No favorites found</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <a href="{{ path('app_favoris_new') }}" class="btn btn-primary" title="Add a favorite">
                            <i class="bi bi-plus-circle"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
