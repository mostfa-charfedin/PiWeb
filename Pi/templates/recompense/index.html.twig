{% extends 'base.html.twig' %}

{% block title %}Rewards List{% endblock %}

{% block body %}
<div class="bg-gradient" style="
    background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%);
    min-height: 100vh;
    padding: 2rem 0;
">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <!-- Logo Section -->
                <div class="d-flex justify-content-center py-4">
                    <div class="text-center">
                        <img src="{{ asset('assets/imgP/logo.png') }}" alt="Onboardify Logo" style="height: 80px; width: auto; margin-bottom: 15px;">
                        <h2 class="h3 mb-3" style="color: #012970; font-weight: 600;">Onboardify</h2>
                    </div>
                </div>

                <!-- Main Card -->
                <div class="card" style="border-radius: 20px; border: none; box-shadow: 0 12px 24px rgba(0,0,0,0.1); backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.9);">
                    <div class="card-header text-white" style="border-radius: 20px 20px 0 0; background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%); border: none;">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title mb-0 py-2" style="font-size: 1.4rem; letter-spacing: 0.5px;">
                                <i class="bi bi-gift me-2"></i>Rewards List
                            </h4>
                            <a href="{{ path('app_recompense_new') }}" class="btn btn-light" style="border-radius: 12px; padding: 8px 16px; background: white; border: none; font-weight: 500;">
                                <i class="bi bi-plus-circle me-2"></i>Create New
                            </a>
                        </div>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th style="color: #4154f1; font-weight: 600;">
                                            <i class="bi bi-bookmark me-1"></i>Type
                                        </th>
                                        <th style="color: #4154f1; font-weight: 600;">
                                            <i class="bi bi-calendar-check me-1"></i>Attribution Date
                                        </th>
                                        <th style="color: #4154f1; font-weight: 600;">
                                            <i class="bi bi-check-circle me-1"></i>Status
                                        </th>
                                        <th style="color: #4154f1; font-weight: 600;">
                                            <i class="bi bi-building me-1"></i>Program
                                        </th>
                                        <th style="color: #4154f1; font-weight: 600;">
                                            <i class="bi bi-gear me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for recompense in recompenses %}
                                    <tr>
                                        <td>{{ recompense.type }}</td>
                                        <td>{{ recompense.dateattribution ? recompense.dateattribution|date('Y-m-d') : '' }}</td>
                                        <td>
                                            <span class="badge" style="background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%);">
                                                {{ recompense.statusrecompence }}
                                            </span>
                                        </td>
                                        <td>{{ recompense.idprogramme.titre }}</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_recompense_show', {'idrecompense': recompense.idrecompense}) }}" 
                                                   class="btn btn-sm btn-light" 
                                                   style="border-radius: 8px; margin-right: 5px; background: white; border: 1px solid #e2e8f0;">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_recompense_edit', {'idrecompense': recompense.idrecompense}) }}" 
                                                   class="btn btn-sm btn-light"
                                                   style="border-radius: 8px; margin-right: 5px; background: white; border: 1px solid #e2e8f0;">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form method="post" action="{{ path('app_recompense_delete', {'idrecompense': recompense.idrecompense}) }}" onsubmit="return confirm('Are you sure you want to delete this reward?');" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recompense.idrecompense) }}">
                                                    <button class="btn btn-sm btn-light" style="border-radius: 8px; background: white; border: 1px solid #e2e8f0;">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="5" class="text-center" style="color: #4a5568;">
                                            <i class="bi bi-exclamation-circle me-2"></i>No rewards found
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="d-grid gap-3 mt-4">
                            <a href="{{ path('app_programmebienetre_index') }}" 
                               class="btn btn-light"
                               style="border-radius: 12px; padding: 12px; background: white; border: 1px solid #e2e8f0; font-weight: 500; letter-spacing: 0.5px;">
                                <i class="bi bi-arrow-left me-2"></i>Back to Programs List
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Footer Note -->
                <div class="text-center mt-3">
                    <p class="text-muted small mb-0" style="color: #4a5568 !important;">
                        <i class="bi bi-info-circle me-1"></i>
                        List mode - View and manage all rewards
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
