{% extends 'base.html.twig' %}

{% block title %}Edit Reward{% endblock %}

{% block body %}
<div class="bg-gradient" style="
    background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%);
    min-height: 100vh;
    padding: 2rem 0;
">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Logo Section -->
                <div class="d-flex justify-content-center py-4">
                    <div class="text-center">
                        <img src="{{ asset('assets/imgP/logo.png') }}" alt="Onboardify Logo" style="height: 80px; width: auto; margin-bottom: 15px;">
                        <h2 class="h3 mb-3" style="color: #012970; font-weight: 600;">Onboardify</h2>
                    </div>
                </div>

                <!-- Main Card -->
                <div class="card" style="border-radius: 20px; border: none; box-shadow: 0 12px 24px rgba(0,0,0,0.1); backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.9);">
                    <div class="card-header text-white" style="border-radius: 20px 20px 0 0; background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%); border: none;">
                        <h4 class="card-title mb-0 py-2 text-center" style="font-size: 1.4rem; letter-spacing: 0.5px;">
                            <i class="bi bi-pencil-square me-2"></i>Edit Reward
                        </h4>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="alert alert-info mb-4" role="alert" style="border-radius: 12px; border: none; background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%); color: white;">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Part of program: <strong>{{ recompense.idprogramme.titre }}</strong>
                        </div>

                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label', 'style': 'color: #4a5568; font-weight: 500;'}}) }}
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e2e8f0; border-right: none;">
                                                <i class="bi bi-bookmark" style="color: #717ff5;"></i>
                                            </span>
                                            {{ form_widget(form.type, {'attr': {
                                                'class': 'form-control',
                                                'style': 'border-radius: 0 12px 12px 0; border: 1px solid #e2e8f0; padding: 12px;'
                                            }}) }}
                                        </div>
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.type) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        {{ form_label(form.statusrecompence, 'Status', {'label_attr': {'class': 'form-label', 'style': 'color: #4a5568; font-weight: 500;'}}) }}
                                        <div class="input-group">
                                            <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e2e8f0; border-right: none;">
                                                <i class="bi bi-check-circle" style="color: #717ff5;"></i>
                                            </span>
                                            {{ form_widget(form.statusrecompence, {'attr': {
                                                'class': 'form-control',
                                                'style': 'border-radius: 0 12px 12px 0; border: 1px solid #e2e8f0; padding: 12px;'
                                            }}) }}
                                        </div>
                                        <div class="invalid-feedback">
                                            {{ form_errors(form.statusrecompence) }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-4">
                                {{ form_label(form.dateattribution, 'Attribution Date', {'label_attr': {'class': 'form-label', 'style': 'color: #4a5568; font-weight: 500;'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text" style="background: #f8f9fa; border: 1px solid #e2e8f0; border-right: none;">
                                        <i class="bi bi-calendar-check" style="color: #717ff5;"></i>
                                    </span>
                                    {{ form_widget(form.dateattribution, {'attr': {
                                        'class': 'form-control',
                                        'style': 'border-radius: 0 12px 12px 0; border: 1px solid #e2e8f0; padding: 12px;'
                                    }}) }}
                                </div>
                                <div class="invalid-feedback">
                                    {{ form_errors(form.dateattribution) }}
                                </div>
                            </div>

                            <div class="d-grid gap-3">
                                <button type="submit" class="btn btn-primary" style="border-radius: 12px; padding: 12px; background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%); border: none; box-shadow: 0 4px 15px rgba(65,84,241,0.2); font-weight: 500; letter-spacing: 0.5px;">
                                    <i class="bi bi-check-circle me-2"></i>Update Reward
                                </button>
                                
                                <a href="{{ path('app_recompense_show', {'idrecompense': recompense.idrecompense}) }}" 
                                   class="btn btn-light"
                                   style="border-radius: 12px; padding: 12px; background: white; border: 1px solid #e2e8f0; font-weight: 500; letter-spacing: 0.5px;">
                                    <i class="bi bi-arrow-left me-2"></i>Back to Details
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Footer Note -->
                <div class="text-center mt-3">
                    <p class="text-muted small mb-0" style="color: #4a5568 !important;">
                        <i class="bi bi-info-circle me-1"></i>
                        Edit mode - Make your changes and click Update
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
