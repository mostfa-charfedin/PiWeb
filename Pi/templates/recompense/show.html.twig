{% extends 'base.html.twig' %}

{% block title %}Reward Details{% endblock %}

{% block body %}
<div class="bg-gradient" style="
    background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%);
    min-height: 100vh;
    padding: 2rem 0;
">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Logo Section -->
                <div class="d-flex justify-content-center py-4">
                    <div class="text-center">
                        <img src="{{ asset('assets/imgP/logo.png') }}" alt="Onboardify Logo" style="height: 80px; width: auto; margin-bottom: 15px;">
                        <h2 class="h3 mb-3" style="color: #012970; font-weight: 600;">Onboardify</h2>
                    </div>
                </div>

                <!-- Main Card -->
                <div class="card" style="border-radius: 20px; border: none; box-shadow: 0 12px 24px rgba(0,0,0,0.1); backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.9);">
                    <div class="card-header text-white" style="border-radius: 20px 20px 0 0; background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%); border: none;">
                        <h4 class="card-title mb-0 py-2 text-center" style="font-size: 1.4rem; letter-spacing: 0.5px;">
                            <i class="bi bi-gift me-2"></i>Reward Details
                        </h4>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="alert alert-info mb-4" role="alert" style="border-radius: 12px; border: none; background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%); color: white;">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Part of program: <strong>{{ recompense.idprogramme.titre }}</strong>
                        </div>

                        <!-- Reward Info Section -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <div class="info-card mb-3" style="background: #f8f9fa; border-radius: 15px; padding: 20px; box-shadow: 0 4px 6px rgba(0,0,0,0.05);">
                                    <h5 class="mb-3" style="color: #4154f1; font-weight: 600;">
                                        <i class="bi bi-info-circle me-2"></i>Basic Information
                                    </h5>
                                    <div class="mb-3">
                                        <label class="form-label" style="color: #4a5568; font-weight: 500;">
                                            <i class="bi bi-bookmark me-1" style="color: #717ff5;"></i>Type
                                        </label>
                                        <div class="form-control" style="border-radius: 12px; border: 1px solid #e2e8f0; background-color: white; padding: 12px;">
                                            {{ recompense.type }}
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" style="color: #4a5568; font-weight: 500;">
                                            <i class="bi bi-check-circle me-1" style="color: #717ff5;"></i>Status
                                        </label>
                                        <div class="form-control" style="border-radius: 12px; border: 1px solid #e2e8f0; background-color: white; padding: 12px;">
                                            {{ recompense.statusrecompence }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-card mb-3" style="background: #f8f9fa; border-radius: 15px; padding: 20px; box-shadow: 0 4px 6px rgba(0,0,0,0.05);">
                                    <h5 class="mb-3" style="color: #4154f1; font-weight: 600;">
                                        <i class="bi bi-calendar me-2"></i>Date Information
                                    </h5>
                                    <div class="mb-3">
                                        <label class="form-label" style="color: #4a5568; font-weight: 500;">
                                            <i class="bi bi-calendar-check me-1" style="color: #717ff5;"></i>Attribution Date
                                        </label>
                                        <div class="form-control" style="border-radius: 12px; border: 1px solid #e2e8f0; background-color: white; padding: 12px;">
                                            {{ recompense.dateattribution ? recompense.dateattribution|date('Y-m-d') : 'Not set' }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Actions Section -->
                        <div class="d-grid gap-3">
                            <a href="{{ path('app_recompense_edit', {'idrecompense': recompense.idrecompense}) }}" 
                               class="btn btn-primary"
                               style="border-radius: 12px; padding: 12px; background: linear-gradient(135deg, #4154f1 0%, #717ff5 100%); border: none; box-shadow: 0 4px 15px rgba(65,84,241,0.2); font-weight: 500; letter-spacing: 0.5px;">
                                <i class="bi bi-pencil-square me-2"></i>Edit Reward
                            </a>
                            
                            <form method="post" action="{{ path('app_recompense_delete', {'idrecompense': recompense.idrecompense}) }}" onsubmit="return confirm('Are you sure you want to delete this reward?');" class="d-grid">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recompense.idrecompense) }}">
                                <button class="btn btn-danger" style="border-radius: 12px; padding: 12px; background: linear-gradient(120deg, #FF416C 0%, #FF4B2B 100%); border: none; box-shadow: 0 4px 15px rgba(255,65,108,0.2); font-weight: 500; letter-spacing: 0.5px;">
                                    <i class="bi bi-trash me-2"></i>Delete Reward
                                </button>
                            </form>

                            <a href="{{ path('app_programmebienetre_index') }}" 
                               class="btn btn-light"
                               style="border-radius: 12px; padding: 12px; background: white; border: 1px solid #e2e8f0; font-weight: 500; letter-spacing: 0.5px;">
                                <i class="bi bi-arrow-left me-2"></i>Back to Programs List
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Footer Note -->
                <div class="text-center mt-3">
                    <p class="text-muted small mb-0" style="color: #4a5568 !important;">
                        <i class="bi bi-info-circle me-1"></i>
                        View mode - Changes can be made in edit mode
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
