{% extends 'sideBar.html.twig' %}

{% block title %}Program Rewards{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
{% endblock %}

{% block content %}
<main id="main" class="main">
  <div class="pagetitle">
    <h1>Program Rewards</h1>
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_programmebienetre_index') }}">Home</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_programmebienetre_show', {'idprogramme': programme.idprogramme}) }}">{{ programme.titre }}</a></li>
        <li class="breadcrumb-item active">Rewards</li>
      </ol>
    </nav>
  </div>

  <section class="section">
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Rewards for {{ programme.titre }}</h5>
            
            <div class="table-responsive">
              <table class="table table-hover datatable">
                <thead>
                  <tr>
                    <th>Type</th>
                    <th>Attribution Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                {% for recompense in recompenses %}
                  <tr>
                    <td>
                      <i class="bi bi-gift me-1"></i>
                      {{ recompense.type }}
                    </td>
                    <td>
                      <span class="badge bg-info">
                        {{ recompense.dateattribution ? recompense.dateattribution|date('M d, Y') : '' }}
                      </span>
                    </td>
                    <td>
                      {% set statusClass = {
                          'Pending': 'bg-warning',
                          'Approved': 'bg-success',
                          'Delivered': 'bg-primary',
                          'Cancelled': 'bg-danger'
                      } %}
                      <span class="badge {{ statusClass[recompense.statusrecompence]|default('bg-warning') }}">
                        {{ recompense.statusrecompence }}
                      </span>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <a href="{{ path('app_recompense_show', {'idrecompense': recompense.idrecompense}) }}" 
                           class="btn btn-primary btn-sm">
                          <i class="bi bi-eye"></i>
                        </a>
                        <a href="{{ path('app_recompense_edit', {'idrecompense': recompense.idrecompense}) }}" 
                           class="btn btn-warning btn-sm">
                          <i class="bi bi-pencil"></i>
                        </a>
                        <form method="post" action="{{ path('app_recompense_delete', {'idrecompense': recompense.idrecompense}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this reward?');" 
                              style="display: inline;">
                          <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recompense.idrecompense) }}">
                          <button class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                {% else %}
                  <tr>
                    <td colspan="4" class="text-center">
                      <div class="py-4">
                        <i class="bi bi-inbox-fill fs-1 text-muted"></i>
                        <p class="mt-2">No rewards found for this program</p>
                        <a href="{{ path('app_recompense_new', {'idprogramme': programme.idprogramme}) }}" 
                           class="btn btn-primary mt-2">
                          <i class="bi bi-plus-circle me-1"></i>Add Your First Reward
                        </a>
                      </div>
                    </td>
                  </tr>
                {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth fade-in animation for card
            const card = document.querySelector('.card');
            card.style.opacity = '0';
            card.style.transform = 'translateY(20px)';
            setTimeout(() => {
                card.style.transition = 'all 0.3s ease';
                card.style.opacity = '1';
                card.style.transform = 'translateY(0)';
            }, 100);
        });
    </script>
{% endblock %} 